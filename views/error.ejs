<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%=err.message%></h4>
            <% if (process.env.NODE_ENV !== "production") { %> <!-- Do not show the error stack once we enter production, AKA the official release -->
            <p><%= err.stack %></p>
            <% } %>
         </div>
    </div>
</div>