<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-3">New Campground</h1>
    <div class="col-md-6 offset-md-3 mb-3"> <!-- column takes 6 units but starts at 3 from the left(so it's int he middle)-->
        <div class="card shadow ">
            <div class="card-body">
                <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" required> <!-- name="campground[property]" saves the value to the actual property in the database -->
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>         
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" required> <!-- name="campground[property]" saves the value to the actual property in the database -->
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <!--<input type="file" name="image" id="" multiple> --> <!-- the 'multiple' attribute allows us to upload multiple files at once -->
                    <!-- <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="campground[image]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div> -->
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                                aria-describedby="price-label" name="campground[price]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="location" name="campground[description]" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mt-3 mb-3 custom-file">
                        <label for="image" class="form-label">Choose Images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple> <!-- We used the 'bs-custom-file-input' plugin which we linked to in 'boilerplate.ejs' for the JS functionality to list the file names and initialized it in 'public/javascripts/validatedforms.js' -->
                        <label for="image" class="custom-file-label text-secondary"></label>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Campground</button>
                    </div>
                </form>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    </div>
</div>